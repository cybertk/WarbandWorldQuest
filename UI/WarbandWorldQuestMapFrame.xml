	<Script file="WarbandWorldQuestSettingsButton.lua" />
	<Script file="WarbandWorldQuestMapFrame.lua" />

	<Button name="WarbandWorldQuestEntryTemplate" mixin="WarbandWorldQuestEntryMixin" enableMouse="true" virtual="true">
		<Size x="295" y="0" />
		<HighlightTexture atlas="event-scheduler-ongoing-events-card-hover" useAtlasSize="true" alphaMode="ADD" />
		<Frames>
			<Button parentKey="IconButton" mixin="WarbandWorldQuestIconButtonMixin">
				<Size x="28" y="28" />
				<Anchors>
					<Anchor point="TOPLEFT" />
				</Anchors>
				<NormalTexture atlas="UI-QuestPoi-QuestNumber" />
				<HighlightTexture atlas="UI-QuestPoi-InnerGlow" alphaMode="ADD" />
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="Underlay">
							<Anchors>
								<Anchor point="CENTER" />
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<Texture parentKey="Display">
							<Anchors>
								<Anchor point="CENTER" />
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnMouseDown method="OnMouseDown" />
					<OnMouseUp method="OnMouseUp" />
				</Scripts>
			</Button>
		</Frames>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" atlas="event-scheduler-ongoing-events-card-incomplete" useAtlasSize="true">
					<Anchors>
						<Anchor point="TOPLEFT" />
						<Anchor point="BOTTOMRIGHT" />
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString parentKey="Name" inherits="GameFontHighlight" maxLines="1" justifyH="LEFT">
					<Anchors>
						<Anchor point="TOPLEFT" x="30" y="-5" />
					</Anchors>
					<Color color="WHITE_FONT_COLOR" />
				</FontString>
				<FontString parentKey="Status" inherits="GameFontHighlight" maxLines="1" justifyH="LEFT">
					<Size x="0" y="0" />
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Name" relativePoint="TOPRIGHT" x="5" y="0" />
					</Anchors>
					<Color color="WHITE_FONT_COLOR" />
				</FontString>
				<FontString parentKey="Progress" inherits="GameFontNormalSmall" maxLines="1" justifyH="RIGHT">
					<Size x="60" y="0" />
					<Anchors>
						<Anchor point="TOPRIGHT" x="-14" y="-5" />
					</Anchors>
				</FontString>
				<FontString parentKey="TimeLeft" inherits="GameFontNormalSmall" maxLines="1" justifyH="LEFT">
					<Size x="0" y="0" />
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Name" relativePoint="BOTTOMLEFT" y="-4" />
					</Anchors>
					<Color color="EVENT_SCHEDULER_LOCATION_COLOR" />
				</FontString>
				<FontString parentKey="Location" inherits="GameFontNormalSmall" maxLines="1" justifyH="LEFT">
					<Size x="0" y="0" />
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.TimeLeft" relativePoint="RIGHT" />
						<Anchor point="TOP" relativeKey="$parent.Name" relativePoint="BOTTOM" y="-4" />
					</Anchors>
					<Color color="EVENT_SCHEDULER_LOCATION_COLOR" />
				</FontString>
				<FontString parentKey="Rewards" inherits="GameFontNormalSmall" maxLines="1" justifyH="RIGHT">
					<Size x="250" y="0" />
					<Anchors>
						<Anchor point="RIGHT" relativePoint="RIGHT" x="-14" />
					</Anchors>
					<Color color="WHITE_FONT_COLOR" />
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnShow method="OnShow" />
			<OnHide method="OnHide" />
			<OnEnter method="OnEnter" />
			<OnLeave method="OnLeave" />
			<OnMouseUp method="OnClick" />
		</Scripts>
	</Button>

	<Button name="WarbandWorldQuestHeaderTemplate" mixin="WarbandWorldQuestHeaderMixin" virtual="true">
		<Size x="295" y="0" />
		<ButtonText parentKey="ButtonText" nonspacewrap="true" justifyH="LEFT">
			<Size x="234" y="10" />
			<Anchors>
				<Anchor point="LEFT" x="8" y="1" />
			</Anchors>
		</ButtonText>
		<NormalTexture atlas="questlog-tab" />
		<HighlightTexture atlas="questlog-tab" alphaMode="ADD" alpha="0.4" />
		<NormalFont style="Game15Font_Shadow" />
		<HighlightFont style="Game15Font_Shadow" />
		<Frames>
			<Button parentKey="CollapseButton" inherits="QuestLogHeaderCollapseButtonTemplate">
				<Anchors>
					<Anchor point="RIGHT" x="-6" />
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad" />
			<OnClick method="OnClick" />
			<OnEnter method="OnEnter" />
			<OnLeave method="OnLeave" />
			<OnMouseDown method="OnMouseDown" />
			<OnMouseUp method="OnMouseUp" />
		</Scripts>
	</Button>

	<Frame name="WarbandWorldQuestTabButtonTemplate" inherits="QuestLogTabButtonTemplate" mixin="WarbandWorldQuestTabButtonMixin" virtual="true">
