				</ButtonText>
				<HighlightTexture atlas="questlog-quest-glow-yellow" alphaMode="ADD" />
				<NormalFont style="GameFontDisableSmall" />
				<HighlightFont style="GameFontHighlightSmall" />
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.BorderFrame" relativePoint="TOPRIGHT" x="0" y="-3" />
